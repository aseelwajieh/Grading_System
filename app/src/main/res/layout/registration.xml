<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text"
        android:layout_width="356dp"
        android:layout_height="76dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="179dp"
        android:text="Registration dates for each year"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btFirst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btFifth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="297dp"
        android:text="fifth year ( 132 - 165 hour )"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Year ( 0 - 33 hour )"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second year ( 34 - 65 hour )"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btThird"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btThird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="third year ( 66 - 99 hour )"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btFourth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btFourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fourth year ( 100 - 132 hour )"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btFifth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>